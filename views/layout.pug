    link(rel='stylesheet' href='https://cdn.datatables.net/1.13.4/css/jquery.dataTables.min.css')

    //- Local stylesheets
    link(rel='stylesheet' href='/stylesheets/style.css')
    link(rel='stylesheet' href='/stylesheets/fss.css')

